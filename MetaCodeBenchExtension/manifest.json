{
    "manifest_version": 3,
    "name": "Code Snippet Extractor",
    "version": "1.0",
    "description": "Extracts and saves code snippets from web pages",
    "permissions": [
        "activeTab",
        "downloads",
        "scripting",
        "storage",
        "tabs",
        "downloads.shelf"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Extract Code Snippets"
    }
}
